<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.webproject.mapper.CommentMapper">

    <!-- 根据帖子ID查询评论列表 -->
    <select id="getByPostId" resultType="com.webproject.pojo.Comment">
        SELECT c.*, u.username, u.image as userAvatar
        FROM comments c
        LEFT JOIN user u ON c.user_id = u.id
        WHERE c.post_id = #{postId}
        ORDER BY c.create_time ASC
    </select>

    <!-- 根据ID查询评论 -->
    <select id="getById" resultType="com.webproject.pojo.Comment">
        SELECT c.*, u.username, u.image as userAvatar
        FROM comments c
        LEFT JOIN user u ON c.user_id = u.id
        WHERE c.id = #{id}
    </select>

    <!-- 新增评论 -->
    <insert id="insert" parameterType="com.webproject.pojo.Comment" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO comments (post_id, user_id, content, create_time)
        VALUES (#{postId}, #{userId}, #{content}, #{createTime})
    </insert>

    <!-- 更新评论 -->
    <update id="update" parameterType="com.webproject.pojo.Comment">
        UPDATE comments
        <set>
            <if test="content != null and content != ''">
                content = #{content},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 删除评论 -->
    <delete id="deleteById">
        DELETE FROM comments WHERE id = #{id}
    </delete>

    <!-- 根据帖子ID删除所有评论 -->
    <delete id="deleteByPostId">
        DELETE FROM comments WHERE post_id = #{postId}
    </delete>

    <!-- 根据用户ID查询评论数量 -->
    <select id="countByUserId" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM comments WHERE user_id = #{userId}
    </select>

    <!-- 根据帖子ID查询评论数量 -->
    <select id="countByPostId" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM comments WHERE post_id = #{postId}
    </select>

    <!-- 查询所有评论（用于分页） -->
    <select id="getAllComments" resultType="com.webproject.pojo.Comment">
        SELECT c.*, u.username, u.image as userAvatar
        FROM comments c
        LEFT JOIN user u ON c.user_id = u.id
        ORDER BY c.create_time DESC
    </select>

    <!-- 获取所有评论数量 -->
    <select id="getAllCommentsCount" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM comments
    </select>

</mapper>
